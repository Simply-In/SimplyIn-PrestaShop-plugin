
<div id="custom-fields">
    <h3>{l s='Custom Checkout Fields' mod='customcheckoutfields'}</h3>

    <!-- Text Input Field -->
    <div class="form-group">
        <label for="custom_text_field">{l s='Custom Text Field' mod='customcheckoutfields'}</label>
        <input type="text" name="custom_text_field" id="custom_text_field" class="form-control" />
    </div>

    <!-- Checkbox -->
    <div class="form-group">
        <label for="custom_checkbox">
            <input type="checkbox" name="custom_checkbox" id="custom_checkbox" />
            {l s='I agree to the terms and conditions' mod='customcheckoutfields'}
        </label>
    </div>
</div>